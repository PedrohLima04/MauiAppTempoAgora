            <Entry x:Name="txt_cidade" />
            <Button Text="Buscar Preisão" Clicked="Button_Clicked_Previsao"/>

            <Label x:Name="lbl_res"/>

            <WebView x:Name="wv_mapa" HeightRequest="500" WidthRequest="1000"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
